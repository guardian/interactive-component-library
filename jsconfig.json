{
  "include": ["*.js", "./src/**/*.jsx"],
  "exclude": ["node_modules", "./src/**/*.stories.*"],
  "compilerOptions": {
    "module": "es2022",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "checkJs": false
  }
}
