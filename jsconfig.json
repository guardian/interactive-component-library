{
  "include": ["*.js", "./src/**/*.jsx"],
  "exclude": ["node_modules", "./src/**/*.stories.*"],
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "jsxFactory": "createElement",
    "skipLibCheck": true,
    "checkJs": false
  }
}
