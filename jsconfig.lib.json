{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./jsconfig.json",
  "include": ["./src/lib"],
  "exclude": ["**/*.stories.jsx"],
  "compilerOptions": {
    "allowJs": true,
    // Output type definition files (*.d.ts) to dist folder
    "outDir": "dist",
    // Only produce definitions for lib files
    "rootDir": "src/lib"
  }
}
